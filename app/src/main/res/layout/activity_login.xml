<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/gradient_bg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Let's Connect"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="25dp"
        android:id="@+id/txtLogin"
        android:textStyle="bold"
        android:layout_marginTop="100dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Empower women with women power"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="12dp"
        android:id="@+id/txtLoginSubtitle"
        android:layout_below="@+id/txtLogin"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFF"
        android:layout_below="@+id/txtLoginSubtitle"
        android:layout_margin="25dp"
        android:orientation="vertical"
        android:id="@+id/login_field_layout">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Full Name"
            android:textSize="14dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:inputType="number"
            android:id="@+id/et_full_name"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Mobile Number"
            android:textSize="14dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:inputType="number"
            android:id="@+id/et_mobile"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#000"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:hint="Password"
            android:textSize="14dp"
            android:id="@+id/et_password"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:inputType="textPassword"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtLoginSubtitle"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/teen"
            android:layout_toLeftOf="@+id/mid"
            android:src="@drawable/img_teenager"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/mid"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerInParent="true"
            android:src="@drawable/img_women"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/old"
            android:layout_toRightOf="@+id/mid"
            android:src="@drawable/img_old"/>
        <View
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/teen_shade"
            android:background="@color/colorWhite"
            android:alpha="0.4"
            android:visibility="gone"
            android:layout_toLeftOf="@+id/mid"/>
        <View
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/mid_shade"
            android:background="@color/colorWhite"
            android:alpha="0.4"
            android:visibility="gone"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerInParent="true"/>
        <View
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/colorWhite"
            android:alpha="0.4"
            android:visibility="gone"
            android:id="@+id/old_shade"
            android:layout_toRightOf="@+id/mid"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_below="@+id/login_field_layout"
        android:id="@+id/layout">
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorWhite"
            android:text="Login"
            android:textColor="@color/colorPrimary"
            android:layout_weight="0.5"
            android:layout_marginRight="5dp"
            android:id="@+id/btnLogin"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorWhite"
            android:text="Register"
            android:textColor="@color/colorPrimary"
            android:layout_weight="0.5"
            android:layout_marginLeft="5dp"
            android:id="@+id/btnRegister"/>
    </LinearLayout>
</LinearLayout>